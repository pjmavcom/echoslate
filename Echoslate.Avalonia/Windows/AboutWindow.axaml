<UserControl
    x:Class="Echoslate.Avalonia.Windows.AboutWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    d:DesignHeight="300"
    d:DesignWidth="400"
    Background="{StaticResource AppBackground}"
    Foreground="{StaticResource Foreground}">
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="256" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Image
            Grid.Row="0"
            Width="128"
            Height="128"
            Source="/Resources/Echoslate.png"
            Stretch="Uniform" />
        <StackPanel
            Grid.Row="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
            <TextBlock
                HorizontalAlignment="Center"
                FontSize="28"
                FontWeight="Bold"
                Text="Echoslate v4.0.0" />

            <TextBlock
                FontSize="14"
                Text="A fast, native todo &amp; Kanban tracker for programmers"
                TextAlignment="Center"
                TextWrapping="Wrap" />

            <TextBlock
                Margin="0,20,0,0"
                HorizontalAlignment="Center"
                Text="Made with ❤️ by Peter Mavrelis" />

            <!--  Ko-fi Link  -->
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                <TextBlock Text="Support development on " />

                <TextBlock
                    Cursor="Hand"
                    Foreground="Blue"
                    PointerPressed="KoFiLink_PointerPressed"
                    Text="Ko-fi"
                    TextDecorations="Underline" />
                <TextBlock Text=" (buy me a coffee ☕)" />
            </StackPanel>

            <!--  GitHub Sponsors Link  -->
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                <TextBlock Text="Feedback &amp; issues on" />
                <TextBlock
                    Cursor="Hand"
                    Foreground="Blue"
                    PointerPressed="GitHubLink_PointerPressed"
                    Text="GitHub"
                    TextDecorations="Underline" />
            </StackPanel>

            <TextBlock
                Margin="0,40,0,0"
                HorizontalAlignment="Center"
                FontSize="11"
                Foreground="#FF888888"
                Text="Open source • MIT License" />
        </StackPanel>
        <Button
            Grid.Row="0"
            Width="0"
            Height="0"
            Content=""
            IsCancel="True"
            IsDefault="True"
            Opacity="0" />
    </Grid>
</UserControl>