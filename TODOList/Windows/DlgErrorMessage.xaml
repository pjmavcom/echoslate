<Window x:Class="Echoslate.DlgErrorMessage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="DlgErrorMessage"
        Width="700" Height="575"
        ResizeMode="NoResize"
        Style="{StaticResource {x:Type Window}}"
        mc:Ignorable="d"
        >
    <Grid>
        <StackPanel>
            <TextBlock Name="WindowMessage"
                       Width="680" Height="512"
                       HorizontalAlignment="Center"
                       TextAlignment="Left" TextWrapping="WrapWithOverflow"
                       />
            <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                <Button Width="100"
                        Click="Ok_OnClick" Content="OK" IsDefault="True"
                        />
                <Button Name="btnCancel"
                        Width="100"
                        Click="Cancel_OnClick" Content="Cancel" IsCancel="True"
                        />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
