<Window x:Class="Echoslate.DlgTodoItemEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        Title="Todo Item Edit"
        Width="610" Height="740"
        FocusManager.FocusedElement="{Binding ElementName=tbTodo}"
        Style="{StaticResource {x:Type Window}}"
        mc:Ignorable="d"
        >

    <Window.InputBindings>
        <KeyBinding Key="Enter" Command="{Binding CompleteCommand}" />
    </Window.InputBindings>

    <StackPanel Margin="10" TextElement.FontSize="16">

        <!--  Severity, Rank, Time, Kanban  -->
        <Grid Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0"
                    Width="Auto"
                    Margin="4,0" Padding="16,8"
                    Background="{Binding SeverityButtonBackground}"
                    BorderThickness="0"
                    Command="{Binding CycleSeverityCommand}"
                    Content="Severity" FontWeight="SemiBold" Foreground="White"
                    />
            <Label Grid.Column="1"
                   Margin="2"
                   Content="Rank:"
                   />
            <xctk:IntegerUpDown Grid.Column="2"
                                Width="80" Height="27"
                                Minimum="0"
                                Value="{Binding Rank, UpdateSourceTrigger=PropertyChanged}"
                                />
            <Label Grid.Column="3"
                   Margin="2"
                   Content="Time:"
                   />
            <xctk:LongUpDown Grid.Column="4"
                             Width="80" Height="27"
                             Minimum="0"
                             Value="{Binding TimeInMinutes, UpdateSourceTrigger=PropertyChanged}"
                             />
            <TextBox Grid.Column="5"
                     Width="70"
                     Margin="2"
                     Text="{Binding KanbanId, UpdateSourceTrigger=PropertyChanged}"
                     ToolTip="Kanban/Card ID"
                     />
        </Grid>

        <!--  TODO  -->
        <Grid Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="80" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0"
                   Margin="2" HorizontalAlignment="Left"
                   Content="TODO:"
                   />
            <TextBox Grid.Column="1"
                     Width="490" Height="70"
                     Margin="2"
                     AcceptsReturn="True"
                     Text="{Binding TodoText, UpdateSourceTrigger=PropertyChanged}"
                     TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"
                     />
        </Grid>

        <!--  Notes  -->
        <Grid Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="80" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0"
                   Margin="2" HorizontalAlignment="Left"
                   Content="Notes:"
                   />
            <TextBox Grid.Column="1"
                     Width="490" Height="180"
                     Margin="2"
                     AcceptsReturn="True"
                     Text="{Binding Notes, UpdateSourceTrigger=PropertyChanged}"
                     TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"
                     />
        </Grid>

        <!--  Tags  -->
        <Grid Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="80" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Label Grid.Row="0" Grid.Column="0"
                   Margin="2" HorizontalAlignment="Left" VerticalAlignment="Center"
                   Content="Tags:"
                   />
            <Button Grid.Row="1" Grid.Column="0"
                    Width="80" Height="32"
                    Margin="2,2,2,5" VerticalAlignment="Top"
                    Command="{Binding AddTagCommand}"
                    Content="Add Tag"
                    />
            <ListBox Grid.Row="0" Grid.RowSpan="2" Grid.Column="1"
                     Width="490" Height="280"
                     Margin="2"
                     ItemsSource="{Binding TagHolders}"
                     SelectedItem="{Binding SelectedTag}"
                     >
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="40" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Button Width="30" Height="26"
                                    Margin="2"
                                    Background="#FF6B6B"
                                    Command="{Binding DataContext.DeleteTagCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                    CommandParameter="{Binding}"
                                    Content="X" FontWeight="Bold" Foreground="White"
                                    />
                            <TextBox Grid.Column="1"
                                     Margin="0,2,2,2"
                                     Background="Transparent" BorderThickness="0,0,0,1"
                                     Text="{Binding Text, UpdateSourceTrigger=PropertyChanged}"
                                     />
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>

        <!--  Buttons  -->
        <UniformGrid Margin="0,10" HorizontalAlignment="Center"
                     Columns="3" Rows="1"
                     >
            <Button Width="160" Height="40"
                    Margin="5"
                    Background="#4CAF50"
                    Command="{Binding CompleteCommand}"
                    Content="Complete" FontSize="16" FontWeight="SemiBold" Foreground="White"
                    />

            <Button Width="160" Height="40"
                    Margin="5"
                    Command="{Binding OkCommand}"
                    Content="OK" FontSize="16" Foreground="White" IsDefault="True"
                    />

            <Button Width="160" Height="40"
                    Margin="5"
                    Background=" #F44336"
                    Command="{Binding CancelCommand}"
                    Content="Cancel" FontSize="16" Foreground="White" IsCancel="True"
                    />

        </UniformGrid>

    </StackPanel>
</Window>
