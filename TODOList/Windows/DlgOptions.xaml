<Window x:Class="Echoslate.DlgOptions"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        Title="Options"
        Width="420" MinWidth="380"
        SizeToContent="Height"
        Style="{StaticResource {x:Type Window}}"
        WindowStartupLocation="CenterOwner">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Main Content  -->
        <StackPanel Grid.Row="0">

            <!--  General Settings  -->
            <GroupBox Margin="0,0,0,24"
                      FontWeight="SemiBold" Header="General Settings">
                <StackPanel Margin="10,15">
                    <CheckBox x:Name="cbAS"
                              Margin="0,0,0,12"
                              Content="Auto Save" FontSize="15" />
                    <CheckBox x:Name="cbAB"
                              Margin="0,0,0,12"
                              Content="Auto Backup" FontSize="15" />
                    <CheckBox x:Name="cbGHK"
                              Content="Enable Global Hotkeys" FontSize="15" />
                </StackPanel>
            </GroupBox>

            <!--  Backup Interval  -->
            <GroupBox FontWeight="SemiBold" Header="Backup Interval">
                <StackPanel Margin="10,15" VerticalAlignment="Center"
                            Orientation="Horizontal">
                    <TextBlock Margin="0,0,12,0" VerticalAlignment="Center"
                               FontSize="15" Text="Create backup every" />
                    <xctk:IntegerUpDown x:Name="iudBackupTime"
                                        Width="80"
                                        FontSize="15" Increment="5"
                                        Maximum="1440" Minimum="5" />
                    <TextBlock Margin="12,0,0,0" VerticalAlignment="Center"
                               FontSize="15" Text="minutes" />
                </StackPanel>
            </GroupBox>

        </StackPanel>

        <!--  Buttons  -->
        <StackPanel Grid.Row="2"
                    Margin="0,20,0,0" HorizontalAlignment="Right"
                    Orientation="Horizontal">
            <Button Width="100"
                    Margin="0,0,12,0"
                    Click="Ok_OnClick" Content="OK"
                    IsDefault="True" />
            <Button Width="100"
                    Click="Cancel_OnClick" Content="Cancel"
                    IsCancel="True" />
        </StackPanel>
    </Grid>
</Window>
