<Window x:Class="Echoslate.DlgOptions"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        Title="Options"
        Width="380" Height="400"
        Style="{StaticResource {x:Type Window}}"
        mc:Ignorable="d"
        >
    <Grid TextElement.FontSize="16" TextElement.Foreground="Gray">
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <CheckBox Name="cbAS" VerticalContentAlignment="Center" />
                <Label Content="Auto Save" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <CheckBox Name="cbAB" VerticalContentAlignment="Center" />
                <Label Content="Auto Backup" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <CheckBox Name="cbGHK" VerticalContentAlignment="Center" />
                <Label Content="Global hotkeys" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="Backup Time" />
                <xctk:IntegerUpDown Name="iudBackupTime" Minimum="1" />

                <!-- <TextBox Name="tbBT" Width="50" PreviewTextInput="BT_OnPreviewTextInput" /> -->
            </StackPanel>
        </StackPanel>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Bottom"
                    Orientation="Horizontal"
                    >
            <Button Width="100"
                    Click="Ok_OnClick" Content="Ok" IsDefault="True"
                    />
            <Button Width="100"
                    Click="Cancel_OnClick" Content="Cancel" IsCancel="True"
                    />
        </StackPanel>
    </Grid>
</Window>
