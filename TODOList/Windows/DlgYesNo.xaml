<Window x:Class="Echoslate.DlgYesNo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="DlgYesNo"
        Width="280" Height="175"
        ResizeMode="NoResize"
        Style="{StaticResource {x:Type Window}}"
        mc:Ignorable="d"
        >
    <Grid>
        <StackPanel>
            <TextBlock Name="WindowMessage"
                       Width="250" Height="112"
                       HorizontalAlignment="Center"
                       TextAlignment="Center" TextWrapping="WrapWithOverflow"
                       />
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                <Button Width="100"
                        Click="Ok_OnClick" Content="OK" IsDefault="True"
                        />
                <Button Name="btnCancel"
                        Width="100"
                        Click="Cancel_OnClick" Content="Cancel" IsCancel="True"
                        />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
