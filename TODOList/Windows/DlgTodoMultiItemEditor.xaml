<Window x:Class="Echoslate.DlgTodoMultiItemEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        Title="Edit Multiple Todo Items"
        Width="600"
        Background="{StaticResource AppDarkBackground}"
        SizeToContent="Height"
        Style="{StaticResource {x:Type Window}}"
        WindowStartupLocation="CenterOwner">

    <Window.InputBindings>
        <KeyBinding Key="Enter"
                    Command="{Binding CompleteCommand}"
                    Modifiers="Ctrl" />
    </Window.InputBindings>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />

        </Grid.RowDefinitions>

        <!--  Properties  -->
        <GroupBox Grid.Row="0"
                  Margin="7"
                  Background="{StaticResource ControlBackground}"
                  FontSize="20" FontWeight="SemiBold"
                  Foreground="{StaticResource Foreground}"
                  Header="Properties"
                  Style="{StaticResource ThinGroupBoxStyle}">
            <Grid Margin="10,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="140" />
                    <ColumnDefinition Width="100" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <CheckBox VerticalAlignment="Center"
                          IsChecked="{Binding IsSeverityChangeable}"
                          Style="{StaticResource ToggleSwitchStyle}" />
                <Button Grid.Column="1"
                        Width="120" Height="40"
                        HorizontalAlignment="Right" VerticalAlignment="Center"
                        Background="{Binding SeverityButtonBackground}"
                        Command="{Binding CycleSeverityCommand}"
                        Content="Severity" FontSize="14"
                        Foreground="White"
                        Style="{StaticResource SeverityButton}" />

                <CheckBox Grid.Column="2"
                          Margin="30,0,0,0" VerticalAlignment="Center"
                          Content="Rank:" FontSize="16"
                          Foreground="{StaticResource SubtleForeground}"
                          IsChecked="{Binding IsRankChangeable}"
                          Style="{StaticResource ToggleSwitchStyle}" />
                <StackPanel Grid.Column="3"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                    <xctk:IntegerUpDown Width="70" Height="30"
                                        Background="{StaticResource EditorBackground}"
                                        BorderBrush="Transparent" FontSize="14"
                                        Foreground="{StaticResource Foreground}"
                                        IsEnabled="{Binding IsRankEnabled}"
                                        Minimum="0"
                                        Value="{Binding Rank, UpdateSourceTrigger=PropertyChanged}" />
                    <Button Width="40"
                            Margin="8,0,5,0"
                            Command="{Binding RankToTopCommand}"
                            Content="▲▲"
                            IsEnabled="{Binding IsRankEnable}"
                            ToolTip="Move to top" />
                    <Button Width="40"
                            Command="{Binding RankToBottomCommand}"
                            Content="▼▼"
                            IsEnabled="{Binding IsRankEnabled}"
                            ToolTip="Move to bottom" />
                </StackPanel>
            </Grid>
        </GroupBox>

        <!--  TODO Text  -->
        <GroupBox Grid.Row="1"
                  Margin="7"
                  Background="{StaticResource ControlBackground}"
                  FontSize="20" FontWeight="SemiBold"
                  Foreground="{StaticResource Foreground}"
                  Header="Title"
                  Style="{StaticResource ThinGroupBoxStyle}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <CheckBox Margin="10,0,0,0" VerticalAlignment="Center"
                          FontSize="16"
                          Foreground="{StaticResource SubtleForeground}"
                          IsChecked="{Binding IsTodoChangeable}"
                          Style="{StaticResource ToggleSwitchStyle}" />
                <TextBox Grid.Column="1"
                         Height="60"
                         Margin="20,0,0,0"
                         AcceptsReturn="True" FontSize="15"
                         Text="{Binding Todo, UpdateSourceTrigger=PropertyChanged}"
                         TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" />
            </Grid>
        </GroupBox>

        <!--  Tags  -->
        <GroupBox Grid.Row="2"
                  Margin="7"
                  Background="{StaticResource ControlBackground}"
                  FontSize="20" FontWeight="SemiBold"
                  Foreground="{StaticResource Foreground}"
                  Header="Tags"
                  Style="{StaticResource ThinGroupBoxStyle}">
            <Grid Margin="10,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <StackPanel VerticalAlignment="Top">
                    <Button Width="90" Height="35"
                            Command="{Binding AddTagCommand}"
                            Content="Add Tag" FontSize="14" />
                    <CheckBox Margin="0,10,0,8" HorizontalAlignment="Left"
                              FontSize="16"
                              Foreground="{StaticResource SubtleForeground}"
                              IsChecked="{Binding IsTagChangeable}"
                              Style="{StaticResource ToggleSwitchStyle}" />
                </StackPanel>

                <ListBox Grid.Column="1"
                         Height="150"
                         Margin="0"
                         Background="{StaticResource ControlBackground}"
                         ItemContainerStyle="{StaticResource TransparentListBoxItemStyle}"
                         ItemsSource="{Binding Tags}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid Height="36" Background="Transparent">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="40" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Button Width="30" Height="24"
                                        Background="#FF4444"
                                        Command="{Binding DataContext.DeleteTagCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                        CommandParameter="{Binding}"
                                        Content="X" FontSize="14"
                                        FontWeight="Bold" Foreground="White" />
                                <TextBox Grid.Column="1"
                                         Height="24" MinWidth="140"
                                         Margin="8,0,0,0"
                                         Background="{StaticResource ButtonBackground}"
                                         BorderThickness="0,0,0,1" FontSize="16"
                                         Text="{Binding Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" />
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </GroupBox>

        <!--  Bottom Buttons  -->
        <StackPanel Grid.Row="3"
                    Margin="0,10,0,10" HorizontalAlignment="Center"
                    Orientation="Horizontal">
            <CheckBox Margin="0,0,3,0" VerticalAlignment="Center"
                      FontSize="16"
                      Foreground="{StaticResource SubtleForeground}"
                      IsChecked="{Binding IsCompleteChangeable}"
                      Style="{StaticResource ToggleSwitchStyle}" />
            <Button Width="140"
                    Margin="0,0,15,0"
                    Command="{Binding CompleteCommand}"
                    Content="{Binding CompleteButtonContent}"
                    FontSize="16" FontWeight="SemiBold"
                    Foreground="{StaticResource Foreground}"
                    IsEnabled="{Binding IsCompleteChangeable}">

                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#4CAF50" />
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Padding="12,8"
                                            Background="{TemplateBinding Background}"
                                            CornerRadius="7">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"
                                                          TextElement.Foreground="{TemplateBinding Foreground}" />
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#2E7D32" />
                                <Setter Property="Opacity" Value="0.7" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            <Button Width="140"
                    Margin="0,0,15,0"
                    Background="#FF0066CC" BorderBrush="#FF0077EE"
                    Command="{Binding OkCommand}"
                    Content="OK" FontSize="16"
                    Foreground="{StaticResource Foreground}"
                    IsDefault="True" />
            <Button Width="140"
                    Margin="0,0,15,0"
                    Background="#F44336"
                    Command="{Binding CancelCommand}"
                    Content="Cancel" FontSize="16"
                    Foreground="{StaticResource Foreground}"
                    IsCancel="True" />
        </StackPanel>
    </Grid>
</Window>