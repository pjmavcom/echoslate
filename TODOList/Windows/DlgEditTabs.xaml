<Window x:Class="TODOList.DlgEditTabs"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:behaviors="clr-namespace:TODOList.Behaviors" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:resources="clr-namespace:TODOList.Resources"
        Title="Edit Tab"
        Width="300" Height="496"
        FocusManager.FocusedElement="{Binding ElementName=lbTabs}"
        Style="{StaticResource {x:Type Window}}"
        mc:Ignorable="d"
        >
    <StackPanel x:Name="MainGrid">
        <ListBox x:Name="lbTabs"
                 Height="350"
                 ItemsSource="{Binding TabNames}"
                 SelectionMode="Multiple"
                 />
        <StackPanel Height="30" Orientation="Horizontal">
            <Button Name="btnNewTab"
                    Width="84"
                    Margin="2,0,2,0"
                    Command="{Binding NewTabCommand}"
                    Content="New Tab"
                    />
            <TextBox Name="tbNewTab"
                     Width="192"
                     Margin="2,0,2,0"
                     behaviors:TextBoxBehavior.RemoveSpaces="True"
                     Text="{Binding NewTabName, UpdateSourceTrigger=PropertyChanged}"
                     />
        </StackPanel>
        <StackPanel Height="30"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal"
                    >
            <Button Width="88"
                    Margin="2,0,2,0"
                    Command="{Binding DeleteCommand}"
                    CommandParameter="{Binding ElementName=MainGrid, Path=Children[0]}"
                    Content="Delete"
                    />
            <Button Width="88"
                    Margin="2,0,2,0"
                    Command="{Binding MoveUpCommand}"
                    CommandParameter="{Binding ElementName=MainGrid, Path=Children[0]}"
                    Content="▲"
                    />
            <Button Width="88"
                    Margin="2,0,2,0"
                    Command="{Binding MoveDownCommand}"
                    CommandParameter="{Binding ElementName=MainGrid, Path=Children[0]}"
                    Content="▼"
                    />
        </StackPanel>
        <StackPanel Height="30"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal"
                    >
            <Button Width="138"
                    Margin="2,0,2,0"
                    Command="{Binding OkCommand}"
                    Content="Ok"
                    />
            <Button Width="138"
                    Margin="2,0,2,0"
                    Command="{Binding CancelCommand}"
                    Content="Cancel"
                    />
        </StackPanel>
    </StackPanel>
</Window>