<Window x:Class="Echoslate.DlgEditTabs"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:behaviors="clr-namespace:Echoslate.Behaviors"
        Title="Edit Tabs"
        Width="360" Height="540"
        Background="{StaticResource AppDarkBackground}"
        Foreground="{StaticResource Foreground}"
        ResizeMode="NoResize" WindowStartupLocation="CenterOwner">

    <Grid Margin="3">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Tab List  -->
        <Border Grid.Column="1"
                Margin="8,4"
                Background="#1E1E1E" CornerRadius="7">
            <Grid>
                <Border BorderBrush="#999999" BorderThickness="7,7,0,0"
                        CornerRadius="7" />
                <Border Margin="-1"
                        BorderBrush="#494949" BorderThickness="0,0,7,7"
                        CornerRadius="7" IsHitTestVisible="False" />
                <ListBox x:Name="lbTabs"
                         Grid.Row="0"
                         Margin="0"
                         Background="{StaticResource ControlBackground}"
                         BorderBrush="#FF444444" BorderThickness="1"
                         FocusManager.FocusedElement="{Binding RelativeSource={RelativeSource Self}}"
                         Foreground="{StaticResource Foreground}"
                         ItemsSource="{Binding TabNames}"
                         SelectionMode="Multiple">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Padding" Value="4,2" />
                            <Setter Property="Margin" Value="0,1" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListBoxItem">
                                        <Border Padding="{TemplateBinding Padding}" Background="{TemplateBinding Background}">
                                            <ContentPresenter />
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter Property="Background" Value="#FF0066CC" />
                                                <Setter Property="Foreground" Value="White" />
                                            </Trigger>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#FF333333" />
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListBox.ItemContainerStyle>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock FontFamily="Consolas" FontSize="14"
                                       Text="{Binding}" />
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </Border>

        <!--  New Tab Row  -->
        <Grid Grid.Row="1" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="110" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0"
                    Margin="8,4,0,4"
                    BorderBrush="{StaticResource BorderMid}"
                    Command="{Binding NewTabCommand}"
                    Content="New Filter"
                    Foreground="{StaticResource SubtleForeground}"
                    IsDefault="True" />

            <Border Grid.Column="1"
                    Margin="8,4"
                    Background="#1E1E1E" CornerRadius="7">
                <Grid>
                    <Border BorderBrush="#999999" BorderThickness="7,7,0,0"
                            CornerRadius="7" />
                    <Border Margin="-1"
                            BorderBrush="#494949" BorderThickness="0,0,7,7"
                            CornerRadius="7" IsHitTestVisible="False" />
                    <TextBox Margin="1" Padding="8,6"
                             VerticalContentAlignment="Center"
                             behaviors:TextBoxBehavior.RemoveSpaces="True"
                             Background="{StaticResource EditorBackground}"
                             BorderBrush="{StaticResource Border}"
                             Foreground="{StaticResource Foreground}"
                             Text="{Binding NewTabName, UpdateSourceTrigger=PropertyChanged}" />
                </Grid>
            </Border>
        </Grid>

        <!--  Delete / Move Buttons  -->
        <StackPanel Grid.Row="2"
                    Margin="0,0,0,24" HorizontalAlignment="Center"
                    Orientation="Horizontal">
            <Button Width="100"
                    Padding="10,8"
                    BorderBrush="#FF666666"
                    Command="{Binding DeleteCommand}"
                    CommandParameter="{Binding ElementName=lbTabs}"
                    Content="Delete" Foreground="#FFE0E0E0" />

            <Button Width="60"
                    BorderBrush="#FF555555"
                    Command="{Binding MoveUpCommand}"
                    CommandParameter="{Binding ElementName=lbTabs}"
                    Content="▲" FontSize="18"
                    FontWeight="Bold" Foreground="#FFE0E0E0" />

            <Button Width="60"
                    BorderBrush="#FF555555"
                    Command="{Binding MoveDownCommand}"
                    CommandParameter="{Binding ElementName=lbTabs}"
                    Content="▼" FontSize="18"
                    FontWeight="Bold" Foreground="#FFE0E0E0" />
        </StackPanel>

        <!--  OK / Cancel  -->
        <StackPanel Grid.Row="3"
                    Margin="0,10,0,10" HorizontalAlignment="Center"
                    Orientation="Horizontal">
            <Button Width="120"
                    Padding="12,10"
                    Background="#FF0066CC" BorderBrush="#FF0077EE"
                    Command="{Binding OkCommand}"
                    Content="OK" FontWeight="SemiBold"
                    Foreground="{StaticResource Foreground}" />
            <Button Width="120"
                    Padding="12,10"
                    Command="{Binding CancelCommand}"
                    Content="Cancel" IsCancel="True" />
        </StackPanel>
    </Grid>
</Window>