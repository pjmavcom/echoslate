<UserControl x:Class="Echoslate.Windows.ChooseDraftWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="460" Height="340">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Margin="0,0,0,20"
                   FontSize="14" Text="You have multiple in-progress drafts.&#x0a;Where should this completion be added?"
                   TextWrapping="Wrap" />

        <ListBox Grid.Row="1"
                 Margin="0,0,0,20"
                 ItemsSource="{Binding Drafts}"
                 SelectedItem="{Binding SelectedHistoryItem}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Margin="0,0,8,0" VerticalAlignment="Center"
                                   FontSize="16" Text="✏️" />
                        <TextBlock VerticalAlignment="Center"
                                   FontWeight="Bold"
                                   Text="{Binding Title}" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <StackPanel Grid.Row="2"
                    HorizontalAlignment="Right"
                    Orientation="Horizontal">
            <Button Width="90"
                    Margin="0,0,10,0"
                    Click="Ok_Click" Content="OK"
                    IsDefault="True" />
            <Button Width="90"
                    Click="Cancel_Click" Content="Cancel"
                    IsCancel="True" />
        </StackPanel>
    </Grid>
</UserControl>