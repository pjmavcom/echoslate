<UserControl x:Class="Echoslate.Windows.TodoItemEditorWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:behaviors="clr-namespace:Echoslate.Behaviors" xmlns:converters="clr-namespace:Echoslate.Converters"
             xmlns:viewModels="clr-namespace:Echoslate.Core.ViewModels;assembly=Echoslate.Core"
             Width="1000"
             Background="{StaticResource AppDarkBackground}">

    <UserControl.InputBindings>
        <KeyBinding Key="Enter"
                    Command="{Binding CompleteCommand}"
                    Modifiers="Ctrl" />
    </UserControl.InputBindings>
    <UserControl.Resources>
        <converters:KanbanIndexToIDConverter x:Key="KanbanIndexToIDConverter" />
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="486" />
            <ColumnDefinition Width="486" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid Margin="7" Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="180" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!--  TODO Text  -->
            <GroupBox Grid.Row="0"
                      Margin="7"
                      Background="{StaticResource ControlBackground}"
                      FontSize="20" FontWeight="SemiBold"
                      Foreground="{StaticResource Foreground}"
                      Header="Title"
                      Style="{StaticResource ThinGroupBoxStyle}">
                <TextBox Margin="1"
                         AcceptsReturn="True" FontSize="15"
                         Text="{Binding TodoText, UpdateSourceTrigger=PropertyChanged}"
                         TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" />
            </GroupBox>

            <!--  Notes  -->
            <GroupBox Grid.Row="1" Grid.Column="0"
                      Margin="7"
                      Background="{StaticResource ControlBackground}"
                      FontSize="20" FontWeight="SemiBold"
                      Foreground="{StaticResource Foreground}"
                      Header="Notes"
                      Style="{StaticResource ThinGroupBoxStyle}">
                <TextBox Height="180"
                         Margin="1"
                         AcceptsReturn="True" FontSize="15"
                         Text="{Binding Notes, UpdateSourceTrigger=PropertyChanged}"
                         TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" />
            </GroupBox>

            <!--  Tags  -->
            <GroupBox Grid.Row="2" Grid.Column="0"
                      Margin="7"
                      Background="{StaticResource ControlBackground}"
                      FontSize="20" FontWeight="SemiBold"
                      Foreground="{StaticResource Foreground}"
                      Header="Tags"
                      Style="{StaticResource ThinGroupBoxStyle}">
                <Grid Margin="10,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Button Width="90" Height="35"
                            VerticalAlignment="Top"
                            Command="{Binding AddTagCommand}"
                            Content="Add Tag" FontSize="14" />
                    <ListBox Grid.Column="1"
                             Height="150"
                             Margin="0"
                             Background="{StaticResource ControlBackground}"
                             ItemContainerStyle="{StaticResource TransparentListBoxItemStyle}"
                             ItemsSource="{Binding Tags}"
                             SelectedItem="{Binding SelectedTag}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid Height="36" Background="Transparent">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="40" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Button Width="30" Height="24"
                                            Background="#FF4444"
                                            Command="{Binding DataContext.DeleteTagCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                            Content="X" FontSize="14"
                                            FontWeight="Bold" Foreground="White" />
                                    <TextBox Grid.Column="1"
                                             Height="24" MinWidth="140"
                                             Margin="8,0,0,0"
                                             Background="{StaticResource ButtonBackground}"
                                             BorderThickness="0,0,0,1" FontSize="16"
                                             Text="{Binding Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" />
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </GroupBox>
        </Grid>

        <!--  Properties  -->
        <Grid Margin="7" Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="180" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <GroupBox Grid.Row="0"
                      Margin="7"
                      Background="{StaticResource ControlBackground}"
                      FontSize="20" FontWeight="SemiBold"
                      Foreground="{StaticResource Foreground}"
                      Header="Properties"
                      Style="{StaticResource ThinGroupBoxStyle}">
                <Grid Margin="10,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!--  Severity Button  -->
                    <Grid Grid.Row="0" Grid.Column="0"
                          Grid.ColumnSpan="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Button Grid.Row="0" Grid.Column="0"
                                Width="120" Height="40"
                                HorizontalAlignment="Center" VerticalAlignment="Center"
                                Background="{Binding SeverityButtonBackground}"
                                Command="{Binding CycleSeverityCommand}"
                                Content="Severity" FontSize="14"
                                Foreground="White"
                                Style="{StaticResource SeverityButton}" />

                        <!--  Rank  -->
                        <TextBlock Grid.Row="0" Grid.Column="1"
                                   Margin="0,0,10,0" HorizontalAlignment="Right"
                                   VerticalAlignment="Center"
                                   FontSize="14" Text="Rank:" />
                        <Border Grid.Row="0" Grid.Column="2"
                                Height="30"
                                BorderBrush="#494949" BorderThickness="1">
                            <TextBlock Width="70" Height="30"
                                       behaviors:MouseWheelNumericBehavior.Enabled="True" behaviors:MouseWheelNumericBehavior.Minimum="0"
                                       behaviors:MouseWheelNumericBehavior.TargetProperty="Rank" FontSize="14"
                                       FontWeight="SemiBold"
                                       IsEnabled="{Binding IsRankEnabled}"
                                       Text="{Binding Rank}"
                                       TextAlignment="Center" ToolTip="Mouse wheel: ±1 | Shift+wheel: ±5" />
                        </Border>
                        <Button Grid.Row="0" Grid.Column="3"
                                Width="40" Height="30"
                                Margin="8,0,5,0"
                                Command="{Binding RankToTopCommand}"
                                Content="▲▲"
                                IsEnabled="{Binding IsRankEnabled}"
                                ToolTip="Move to top" />
                        <Button Grid.Row="0" Grid.Column="4"
                                Width="40" Height="30"
                                Command="{Binding RankToBottomCommand}"
                                Content="▼▼"
                                IsEnabled="{Binding IsRankEnabled}"
                                ToolTip="Move to bottom" />
                    </Grid>

                    <!--  Kanban  -->
                    <Grid Grid.Row="1" Grid.Column="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0"
                                   Margin="3" HorizontalAlignment="Right"
                                   VerticalAlignment="Center"
                                   FontSize="14" Text="Kanban:" />
                        <Button Grid.Column="1"
                                Width="120"
                                Margin="3" HorizontalAlignment="Left"
                                Command="{Binding CycleKanbanCommand}"
                                Content="{Binding KanbanId, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource KanbanIndexToIDConverter}}"
                                FontSize="14" ToolTip="Kanban Status" />
                    </Grid>

                    <!--  Time  -->
                    <Grid Grid.Row="1" Grid.Column="1"
                          Width="200">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Row="1" Grid.Column="0"
                                   Margin="0,0,10,0" HorizontalAlignment="Right"
                                   VerticalAlignment="Center"
                                   FontSize="14" Text="Time (min):" />
                        <Border Grid.Row="1" Grid.Column="1"
                                Height="30"
                                BorderBrush="#494949" BorderThickness="1">
                            <TextBlock Width="70" Height="30"
                                       behaviors:MouseWheelNumericBehavior.Enabled="True" behaviors:MouseWheelNumericBehavior.Minimum="0"
                                       behaviors:MouseWheelNumericBehavior.TargetProperty="TimeInMinutes" FontSize="14"
                                       FontWeight="SemiBold"
                                       Text="{Binding TimeInMinutes}"
                                       TextAlignment="Center" ToolTip="Mouse wheel: ±1 | Shift+wheel: ±5" />
                        </Border>
                    </Grid>
                </Grid>
            </GroupBox>

            <!--  Problem  -->
            <GroupBox Grid.Row="1"
                      Margin="7"
                      Background="{StaticResource ControlBackground}"
                      FontSize="20" FontWeight="SemiBold"
                      Foreground="{StaticResource Foreground}"
                      Header="Problem"
                      Style="{StaticResource ThinGroupBoxStyle}">
                <TextBox Height="180"
                         Margin="1"
                         AcceptsReturn="True" FontSize="15"
                         Text="{Binding Problem, UpdateSourceTrigger=PropertyChanged}"
                         TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" />
            </GroupBox>

            <!--  Solution  -->
            <GroupBox Grid.Row="2"
                      Margin="7"
                      Background="{StaticResource ControlBackground}"
                      FontSize="20" FontWeight="SemiBold"
                      Foreground="{StaticResource Foreground}"
                      Header="Solution"
                      Style="{StaticResource ThinGroupBoxStyle}">
                <TextBox Grid.Row="0"
                         Height="180"
                         Margin="1"
                         AcceptsReturn="True" FontSize="15"
                         Text="{Binding Solution, UpdateSourceTrigger=PropertyChanged}"
                         TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" />
            </GroupBox>
        </Grid>

        <!--  Buttons  -->
        <StackPanel Grid.Row="1" Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Margin="0,10,0,10" HorizontalAlignment="Center"
                    Orientation="Horizontal">
            <Button Width="140"
                    Margin="0,0,15,0"
                    Background="#4CAF50" Click="Complete_OnClick"
                    Content="Complete" FontSize="16"
                    FontWeight="SemiBold" Foreground="White" />
            <Button Width="140"
                    Margin="0,0,15,0"
                    Background="#FF0066CC" BorderBrush="#FF0077EE"
                    Click="Ok_OnClick" Content="OK"
                    FontSize="16"
                    Foreground="{StaticResource Foreground}"
                    IsDefault="True" />
            <Button Width="140"
                    Background="#F44336" Click="Cancel_OnClick"
                    Content="Cancel" FontSize="16"
                    Foreground="White" IsCancel="True" />
            <Label Width="500" Height="30"
                   HorizontalAlignment="Right" VerticalAlignment="Bottom"
                   HorizontalContentAlignment="Right"
                   Content="{Binding Guid}"
                   FontSize="12" />
        </StackPanel>
    </Grid>
</UserControl>