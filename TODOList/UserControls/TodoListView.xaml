<UserControl x:Class="TODOList.UserControls.TodoListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:TODOList.UserControls"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:todoList="clr-namespace:TODOList"
             xmlns:viewModels="clr-namespace:TODOList.ViewModels"
             d:DesignHeight="500"
             d:DesignWidth="*"
             mc:Ignorable="d">
    <UserControl.Resources>
        <todoList:ProgressBarForegroundConverter x:Key="ProgressBarForegroundConverter" />
        <todoList:TagToBackgroundConverter x:Key="TagToBackgroundConverter" />
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="7*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="300" />
        </Grid.ColumnDefinitions>

        <ItemsControl Grid.Row="0"
                      Margin="10,10,10,5"
                      ItemsSource="{Binding AvailableTags}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Horizontal" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>

            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Button Margin="4,0"
                            Padding="16,8"
                            Background="{Binding RelativeSource={RelativeSource self}, Path=Content, Converter={StaticResource TagToBackgroundConverter}}"
                            BorderThickness="0"
                            Command="{Binding DataContext.SelectTagCommand, RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}"
                            CommandParameter="{Binding}"
                            Content="{Binding}"
                            FontWeight="SemiBold"
                            Foreground="White" />
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>


        <StackPanel Grid.Row="1"
                    Grid.Column="0"
                    Orientation="Horizontal">
            <ComboBox Name="cbHashTags"
                      Width="301"
                      ItemsSource="{Binding}"
                      KeyboardNavigation.IsTabStop="False"
                      SelectionChanged="HashTags_OnSelectionChanged" />
            <Button Width="161"
                    Click="Sort_OnClick"
                    CommandParameter="date"
                    Content="Date"
                    KeyboardNavigation.IsTabStop="False" />
            <Button Width="101"
                    Click="Sort_OnClick"
                    CommandParameter="severity"
                    Content="Severity"
                    KeyboardNavigation.IsTabStop="False" />

            <Button Width="111"
                    Click="Sort_OnClick"
                    CommandParameter="rank"
                    Content="Rank"
                    KeyboardNavigation.IsTabStop="False" />
            <Button Width="71"
                    Click="Sort_OnClick"
                    CommandParameter="kanban"
                    Content="Kanban"
                    KeyboardNavigation.IsTabStop="False" />
            <Button Width="111"
                    Click="Sort_OnClick"
                    CommandParameter="active"
                    Content="Active"
                    KeyboardNavigation.IsTabStop="False" />
        </StackPanel>

        <ListBox x:Name="lbTodos"
                 Grid.Row="2"
                 Grid.Column="0"
                 HorizontalContentAlignment="Stretch"
                 VerticalContentAlignment="Stretch"
                 ItemsSource="{Binding DisplayedItems}"
                 KeyboardNavigation.TabIndex="0"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                 SelectionMode="Extended">
            <ListBox.ContextMenu>
                <ContextMenu>
                    <MenuItem Click="mnuContextMenu_OnClick"
                              CommandParameter="Edit"
                              Header="Edit" />
                    <MenuItem Click="mnuContextMenu_OnClick"
                              CommandParameter="Delete"
                              Header="Delete" />
                    <Separator />
                    <MenuItem Click="mnuContextMenu_OnClick"
                              CommandParameter="ResetTimer"
                              Header="Reset Timer" />
                    <Separator />
                    <MenuItem Click="mnuContextMenu_OnClick"
                              CommandParameter="Kanban3"
                              Header="Set Kanban: Current" />
                    <MenuItem Click="mnuContextMenu_OnClick"
                              CommandParameter="Kanban2"
                              Header="Set Kanban: Next" />
                    <MenuItem Click="mnuContextMenu_OnClick"
                              CommandParameter="Kanban1"
                              Header="Set Kanban: Backlog" />
                    <MenuItem Click="mnuContextMenu_OnClick"
                              CommandParameter="Kanban0"
                              Header="Set Kanban: None" />
                    <Separator />
                    <MenuItem Click="mnuContextMenu_OnClick"
                              CommandParameter="MoveUp"
                              Header="Move to Top" />
                    <MenuItem Click="mnuContextMenu_OnClick"
                              CommandParameter="MoveDown"
                              Header="Move to Bottom" />
                </ContextMenu>
            </ListBox.ContextMenu>
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="Height" Value="auto" />
                    <Setter Property="Padding" Value="0" />
                </Style>
            </ListBox.ItemContainerStyle>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Margin="0,2"
                                Orientation="Horizontal"
                                ToolTip="{Binding NotesAndTags}">
                        <TextBlock Width="300"
                                   VerticalAlignment="Top"
                                   KeyboardNavigation.IsTabStop="False"
                                   Text="{Binding TagsSorted}"
                                   TextWrapping="WrapWithOverflow" />
                        <TextBlock Width="160"
                                   Height="30"
                                   Margin="4"
                                   VerticalAlignment="Top"
                                   Foreground="Red"
                                   KeyboardNavigation.IsTabStop="False"
                                   Text="{Binding StartDateTime}" />
                        <Button Width="90" Click="Severity_OnClick">
                            <Button.Style>
                                <Style BasedOn="{StaticResource {x:Type Button}}" TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <ProgressBar Height="30"
                                                             VerticalAlignment="Top"
                                                             Background="Black"
                                                             BorderBrush="DarkSlateGray"
                                                             Foreground="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Value, Converter={StaticResource ProgressBarForegroundConverter}}"
                                                             KeyboardNavigation.IsTabStop="False"
                                                             Maximum="3"
                                                             Minimum="0"
                                                             Value="{Binding Severity}" />
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                        <Label Width="50"
                               Height="30"
                               Margin="4"
                               VerticalAlignment="Top"
                               Content="{Binding Rank}"
                               KeyboardNavigation.IsTabStop="False" />
                        <Button Width="25"
                                Height="30"
                                VerticalAlignment="Top"
                                Click="RankAdjust_OnClick"
                                CommandParameter="down"
                                Content="6"
                                FontFamily="Marlett"
                                FontSize="20"
                                KeyboardNavigation.IsTabStop="False" />
                        <Button Width="25"
                                Height="30"
                                VerticalAlignment="Top"
                                Click="RankAdjust_OnClick"
                                CommandParameter="up"
                                Content="5"
                                FontFamily="Marlett"
                                FontSize="20"
                                KeyboardNavigation.IsTabStop="False" />
                        <Label Width="70"
                               Height="30"
                               Margin="4"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Top"
                               Content="{Binding Kanban}"
                               KeyboardNavigation.IsTabStop="False" />
                        <Label Width="65"
                               Height="30"
                               VerticalAlignment="Top"
                               HorizontalContentAlignment="Right"
                               Content="{Binding TimeTakenInMinutes, UpdateSourceTrigger=PropertyChanged}"
                               ContentStringFormat="{}{0:00.## :}"
                               KeyboardNavigation.IsTabStop="False"
                               MouseUp="TimeTakenTimer_OnClick">
                            <Label.Style>
                                <Style>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsTimerOn}" Value="True">
                                            <Setter Property="Label.Background" Value="Lime" />
                                            <Setter Property="Label.Foreground" Value="Black" />
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding IsTimerOn}" Value="False">
                                            <Setter Property="Label.Background" Value="Transparent" />
                                            <Setter Property="Label.Foreground" Value="LightGray" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Label.Style>
                        </Label>
                        <Label Width="45"
                               Height="30"
                               VerticalAlignment="Top"
                               HorizontalContentAlignment="Left"
                               Content="{Binding TimeTaken.Second, UpdateSourceTrigger=PropertyChanged}"
                               ContentStringFormat="{}{0:00.##}"
                               KeyboardNavigation.IsTabStop="False"
                               MouseUp="TimeTakenTimer_OnClick">
                            <Label.Style>
                                <Style>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsTimerOn}" Value="True">
                                            <Setter Property="Label.Background" Value="Lime" />
                                            <Setter Property="Label.Foreground" Value="Black" />
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding IsTimerOn}" Value="False">
                                            <Setter Property="Label.Background" Value="Transparent" />
                                            <Setter Property="Label.Foreground" Value="LightGray" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Label.Style>
                        </Label>
                        <TextBlock Margin="4,0"
                                   Text="{Binding Todo}"
                                   TextAlignment="Left"
                                   TextWrapping="WrapWithOverflow" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <Grid Grid.Row="3" Grid.Column="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="70" />
            </Grid.ColumnDefinitions>
            <TextBox x:Name="tbNewTodo"
                     Grid.Column="0"
                     KeyboardNavigation.TabIndex="1"
                     ScrollViewer.VerticalScrollBarVisibility="Auto"
                     TextWrapping="WrapWithOverflow" />
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <ComboBox Name="cbSeverity"
                          Grid.Row="0"
                          KeyboardNavigation.TabIndex="2"
                          Loaded="SeverityComboBox_OnIsLoaded"
                          SelectionChanged="SeverityComboBox_OnSelectionChange"
                          Unloaded="SeverityComboBox_OnIsLoaded">
                    <ComboBoxItem Content="None" />
                    <ComboBoxItem Content="Low" IsSelected="True" />
                    <ComboBoxItem Content="Med" />
                    <ComboBoxItem Content="High" />
                </ComboBox>
                <Button Grid.Row="1"
                        Click="Add_OnClick"
                        Content="Add"
                        KeyboardNavigation.TabIndex="3" />
            </Grid>
        </Grid>

        <local:IncompleteItemsNotesPanel Grid.Row="0"
                                         Grid.RowSpan="4"
                                         Grid.Column="1" />
    </Grid>
</UserControl>