<UserControl x:Class="Echoslate.TagPicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:b="http://schemas.microsoft.com/xaml/behaviors" xmlns:behaviors="clr-namespace:Echoslate.Behaviors"
             Width="340" Height="500"
             Background="{StaticResource AppDarkBackground}"
             Foreground="{StaticResource Foreground}">

    <UserControl.InputBindings>
        <KeyBinding Key="Enter"
                    Command="{Binding OkCommand}"
                    Modifiers="Control" />
    </UserControl.InputBindings>

    <Grid Margin="3">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Tag List  -->
        <Border Grid.Column="1"
                Margin="8,4"
                Background="#1E1E1E" CornerRadius="7">
            <Grid>
                <Border BorderBrush="#999999" BorderThickness="7,7,0,0"
                        CornerRadius="7" />
                <Border Margin="-1"
                        BorderBrush="#494949" BorderThickness="0,0,7,7"
                        CornerRadius="7" IsHitTestVisible="False" />
                <ListBox Name="lbTags"
                         Grid.Row="0"
                         Margin="0"
                         Background="{StaticResource ControlBackground}"
                         BorderBrush="#FF444444" BorderThickness="1"
                         Foreground="{StaticResource Foreground}"
                         ItemsSource="{Binding AllAvailableTagsView}"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled" SelectionMode="Multiple">
                    <b:Interaction.Behaviors>
                        <behaviors:SelectedItemsBehavior SelectedItems="{Binding DataContext.SelectedTags, RelativeSource={RelativeSource AncestorType=ListBox}, Mode=OneWay}" />
                    </b:Interaction.Behaviors>
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Padding" Value="4,2" />
                            <Setter Property="Margin" Value="0,1" />
                            <Setter Property="Background" Value="Transparent" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListBoxItem">
                                        <Border Padding="{TemplateBinding Padding}"
                                                Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="0,0,0,1">
                                            <ContentPresenter />
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter Property="Background" Value="#FF0066CC" />
                                                <Setter Property="Foreground" Value="{StaticResource Foreground}" />
                                            </Trigger>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#FF333333" />
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListBox.ItemContainerStyle>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock FontFamily="Consolas" FontSize="14"
                                       Text="{Binding}" />
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </Border>

        <!--  New Tag Row  -->
        <Grid Grid.Row="1" Margin="0,0,0,9">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0"
                    Margin="8,4,0,4"
                    BorderBrush="{StaticResource BorderMid}"
                    Click="NewTag_OnClick" Content="New Tag"
                    Foreground="{StaticResource SubtleForeground}"
                    IsDefault="True" />
            <Border Grid.Column="1"
                    Margin="8,4"
                    Background="#1E1E1E" CornerRadius="7">
                <Grid>
                    <Border BorderBrush="#999999" BorderThickness="7,7,0,0"
                            CornerRadius="7" />
                    <Border Margin="-1"
                            BorderBrush="#494949" BorderThickness="0,0,7,7"
                            CornerRadius="7" IsHitTestVisible="False" />
                    <TextBox Margin="1" Padding="8,6"
                             VerticalContentAlignment="Center"
                             Background="{StaticResource EditorBackground}"
                             BorderBrush="{StaticResource Border}"
                             Foreground="{StaticResource Foreground}"
                             Text="{Binding NewTagName, UpdateSourceTrigger=PropertyChanged}" />
                </Grid>
            </Border>
        </Grid>

        <!--  OK / Cancel Buttons  -->
        <StackPanel Grid.Row="2"
                    Height="25"
                    Margin="0,10,0,10" HorizontalAlignment="Center"
                    Orientation="Horizontal">
            <Button Width="120"
                    Padding="12,10"
                    Background="#FF0066CC" BorderBrush="#FF0077EE"
                    Click="Ok_OnClick" Content="OK"
                    FontWeight="SemiBold"
                    Foreground="{StaticResource Foreground}" />
            <Button Width="120"
                    Padding="12,10"
                    Click="Cancel_OnClick" Content="Cancel"
                    IsCancel="True" />
        </StackPanel>
    </Grid>
</UserControl>