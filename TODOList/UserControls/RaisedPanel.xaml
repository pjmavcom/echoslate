<UserControl x:Class="Echoslate.UserControls.RaisedPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch"
             Background="Transparent">
    <!--  Setting Background to Transparent here is crucial to override the App.xaml style  -->

    <Grid SnapsToDevicePixels="True">
        <Border x:Name="BaseBorder"
                Background="#FF2B2B2B" CornerRadius="6">
            <Border BorderBrush="#FF505050" BorderThickness="1.5,1.5,0,0"
                    CornerRadius="6" IsHitTestVisible="False">
                <Border BorderBrush="#FF000000" BorderThickness="0,0,2,2"
                        CornerRadius="6" IsHitTestVisible="False">
                    <Border Margin="3"
                            Background="#FF0A0A0A" CornerRadius="5">


                    </Border>
                </Border>
            </Border>
        </Border>

    </Grid>
</UserControl>