<UserControl
    x:Class="Echoslate.Wpf.Windows.AboutWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{StaticResource AppBackground}"
    Foreground="{StaticResource Foreground}"
    mc:Ignorable="d">
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="256" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Image
            Grid.Row="0"
            Width="128"
            Height="128"
            Source="/Resources/Echoslate.png"
            Stretch="Uniform" />
        <StackPanel
            Grid.Row="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
            <TextBlock
                HorizontalAlignment="Center"
                FontSize="28"
                FontWeight="Bold"
                Text="{Binding Version}" />

            <TextBlock
                FontSize="14"
                Text="A fast, native todo &amp; Kanban tracker for programmers"
                TextAlignment="Center"
                TextWrapping="Wrap" />

            <TextBlock
                Margin="0,20,0,0"
                HorizontalAlignment="Center"
                Text="Made with ❤️ by Peter Mavrelis" />

            <!--  Ko-fi Link  -->
            <TextBlock FontSize="14" TextAlignment="Center">
                <Run Text="Support development on " />
                <Hyperlink NavigateUri="https://ko-fi.com/pjmavcom" RequestNavigate="Hyperlink_RequestNavigate">
                    Ko-fi
                </Hyperlink>
                <Run Text=" (buy me a coffee ☕)" />
            </TextBlock>

            <!--  GitHub Sponsors Link  -->
            <TextBlock FontSize="14" TextAlignment="Center">
                <Run Text="Feedback &amp; issues on" />
                <Hyperlink
                    Foreground="#FF0066FF"
                    NavigateUri="https://github.com/pjmavcom/echoslate"
                    RequestNavigate="Hyperlink_RequestNavigate">
                    GitHub
                </Hyperlink>
            </TextBlock>

            <TextBlock
                Margin="0,40,0,0"
                HorizontalAlignment="Center"
                FontSize="11"
                Foreground="#FF888888"
                Text="Open source • MIT License" />
        </StackPanel>
        <Button
            Grid.Row="0"
            Width="0"
            Height="0"
            Content=""
            IsCancel="True"
            IsDefault="True"
            Opacity="0" />
    </Grid>
</UserControl>