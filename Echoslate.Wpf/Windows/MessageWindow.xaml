<UserControl x:Class="Echoslate.Windows.MessageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Echoslate.Windows"
        mc:Ignorable="d" >
    <StackPanel Margin="20">
        <TextBlock
            Margin="0,0,0,20"
            Text="{Binding Message}"
            TextWrapping="Wrap" />

        <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
            <Button
                Margin="0,0,10,0"
                Click="Ok_OnClick"
                    FontSize="16"
                    Background="{DynamicResource AccentBrush}"
                    BorderBrush="{DynamicResource LightAccentBrush}"
                Content="OK"
                Visibility="{Binding ShowOk}" />
            <Button
                Margin="0,0,10,0"
                Click="Yes_OnClick"
                FontSize="16"
                Content="Yes"
                Visibility="{Binding ShowYes}" />
            <Button
                Margin="0,0,10,0"
                FontSize="16"
                Click="No_OnClick"
                Visibility="{Binding ShowNo}" />
            <Button
                Click="Cancel_OnClick"
                Content="Cancel"
                FontSize="16"
                Background="{DynamicResource DangerRedBrush}"
                BorderBrush="{DynamicResource DangerRedBrush}"
                Visibility="{Binding ShowCancel}" />
        </StackPanel>
    </StackPanel>
</UserControl>